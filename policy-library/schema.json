{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "version",
    "metadata",
    "modules"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "required": [
        "project_name",
        "description",
        "created_date"
      ],
      "properties": {
        "project_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "created_date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "modules": {
      "type": "object",
      "properties": {
        "token_sale": {
          "type": "object",
          "properties": {
            "kyc_threshold_usd": {
              "type": "number"
            },
            "max_cap_usd": {
              "type": "number"
            },
            "blocklist": {
              "type": "array"
            },
            "whitelist": {
              "type": "array"
            }
          }
        },
        "licensing_requirements": {
          "type": "object",
          "properties": {
            "license_type": {
              "type": "string"
            },
            "monthly_transaction_threshold_sgd": {
              "type": "number"
            },
            "float_threshold_sgd": {
              "type": "number"
            },
            "capital_requirement_sgd": {
              "type": "number"
            }
          }
        },
        "digital_payment_token_requirements": {
          "type": "object",
          "properties": {
            "dpt_services": {
              "type": "array"
            },
            "technology_requirements": {
              "type": "array"
            }
          }
        },
        "aml_cft_requirements": {
          "type": "object",
          "properties": {
            "customer_due_diligence": {
              "type": "array"
            },
            "edd_thresholds": {
              "type": "object"
            },
            "str_required": {
              "type": "boolean"
            },
            "str_threshold": {
              "type": "number"
            },
            "record_retention_years": {
              "type": "number"
            }
          }
        },
        "risk_management": {
          "type": "object",
          "properties": {
            "required_policies": {
              "type": "array"
            },
            "singapore_resident_director": {
              "type": "boolean"
            },
            "compliance_officer_required": {
              "type": "boolean"
            },
            "mlro_required": {
              "type": "boolean"
            }
          }
        },
        "consumer_protection": {
          "type": "object",
          "properties": {
            "customer_asset_segregation": {
              "type": "boolean"
            },
            "trust_account_required": {
              "type": "boolean"
            },
            "required_disclosures": {
              "type": "array"
            },
            "prohibited_practices": {
              "type": "array"
            }
          }
        },
        "reporting_obligations": {
          "type": "object",
          "properties": {
            "regulatory_returns": {
              "type": "array"
            },
            "annual_audit_required": {
              "type": "boolean"
            },
            "approved_auditor_required": {
              "type": "boolean"
            }
          }
        },
        "market_conduct": {
          "type": "object",
          "properties": {
            "insider_trading_monitoring": {
              "type": "boolean"
            },
            "market_manipulation_prevention": {
              "type": "boolean"
            },
            "advertising_requirements": {
              "type": "array"
            }
          }
        },
        "cross_border_requirements": {
          "type": "object",
          "properties": {
            "fintech_bridge_countries": {
              "type": "array"
            },
            "singapore_office_required": {
              "type": "boolean"
            },
            "local_representative_required": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}